<QuestionWindow>:
	button1: button1
	button2: button2
	button3: button3
	button4: button4
	scoreLabel : scoreLabel
	questionLabel: questionLabel
	remainingLabel: remainingLabel
	cols: 3

	GridLayout:
		rows: 3

		GridLayout:
			cols: 2
			rows: 2
			Label:
				text: "score : "
			Label:
				id: scoreLabel
				text: ""
			Label:
				text: "remaining : "
			Label:
				id: remainingLabel
				text: ""


		GridLayout:
			rows: 1
			cols: 1
			Label:
				id: questionLabel
				text: ''


		GridLayout:
			cols: 2
			rows: 2

			Button:
				id: button1
				text: ''
				on_release:
					root.button1_action()

			Button:
				id: button2
				text: ''
				on_release:
					root.button2_action()

			Button:
				id: button3
				text: ''
				on_release:
					root.button3_action()

			Button:
				id: button4
				text: ''
				on_release:
					root.button4_action()
